<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/GamerListFragment">

    <fragment
        android:id="@+id/GamerListFragment"
        android:name="com.rosseti.tmgfoosball.ui.list.GamerListFragment"
        android:label="@string/foosball_scores"
        tools:layout="@layout/fragment_gamer_list">
        <action
            android:id="@+id/action_gamerListFragment_to_gamerDetailsFragment"
            app:destination="@id/gamerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamerDetailsFragment"
        android:name="com.rosseti.tmgfoosball.ui.detail.GamerDetailsFragment"
        android:label="@string/foosball_scores"
        tools:layout="@layout/fragment_gamer_details" >
        <action
            android:id="@+id/action_gamerDetailsFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDetailsFragment"
        android:name="com.rosseti.tmgfoosball.ui.detail.GameDetailsFragment"
        android:label="@string/foosball_scores"
        tools:layout="@layout/fragment_game_detail" />
</navigation>
