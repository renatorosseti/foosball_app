<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="textTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textTitleMatchesStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="subTextItemStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolBarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textNoInternetTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputStyle" >
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_rounded_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>